<% unless notice.blank? %>
<div class="alert alert-warning alert-dismissible" role="alert" id="margin-top10">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <%= notice %>
</div>
<% end %>

<h4>地区本部一覧</h4>

<div class="float-right">
 　<%= link_to sanitize('<i class="fa fa-pencil"></i>') + '新規登録', new_branch_path, class: "btn btn-primary" %>
</div>

<table>
 <table class="table table-condensed table-hover table-striped table-bordered branch-table">
  <thead>
    <tr>
      <th id="width100">No</th>
      <th id="width150">地区本部コード</th>
      <th>地区本部名</th>
      <th id="width100"></th>
      <th id="width100"></th>
    </tr>
  </thead>

  <tbody>
    <% count = 0 %>
    <% @branches.each do |branch| %>
      <tr>
        <td id="align-right"><%= count +=1 %></td>
        <td><%= branch.branch_cd %></td>
        <td id="align-left"><%= branch.branch_name %></td>
        <td><%= link_to '変更', edit_branch_path(branch) %></td>
        <td><%= link_to '削除', branch, method: :delete, data: { confirm: '地区本部を削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
